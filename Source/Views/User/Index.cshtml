@model IEnumerable<User>

@{
    Layout = "_Layout";
    var title = "User List";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<h3><a asp-action="Create" class="btn btn-sm btn-secondary">Create</a></h3>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr><th>Name</th><th>Role</th><th>Emailid</th><th>PhoneNo</th><th>Update</th><th>Delete</th></tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="7" class="text-center">No Model Data</td></tr>
        }
        else
        {
            @foreach (var p in Model)
            {
            <tr>
               
                <td>@p.UserName</td>
                <td>@p.UserRole</td>
                <td>@p.Emailid</td>
                <td>@p.PhoneNo</td>
                <td><a asp-action="Update" asp-route-id="@p.Id">Update</a></td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@p.Id">
                        <button>Delete</button>
                    </form>
                </td>
            </tr>
            }
        }
    </tbody>
</table>